#!css //nl

using System;
using System.IO;
using System.Collections.Generic;

public class Script
{
	
	private const string SourcePath = @"D:\home\bin\";
	private const string TargetPath = @"%windir%\system32\inetsrv\config\redirection.config";
	
    public static int Main(string[] args)
    {
		if (args == null || args.Length != 1 || string.IsNullOrEmpty(args[0]))
		{
			Console.WriteLine("Usage: iisredirection <config>");
			return 1;
		}
				
		var sourceFile = string.Format("{0}.redirection.config", args[0]);
		var sourcePath = Path.Combine(SourcePath, sourceFile);
		File.Copy(sourcePath, Environment.ExpandEnvironmentVariables(TargetPath), true);
		
		return 0;
	}
}